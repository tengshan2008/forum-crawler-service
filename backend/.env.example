# Server Configuration
NODE_ENV=development
PORT=5000
HOST=0.0.0.0

# Database Configuration
MONGODB_URI=mongodb://mongo:27017/forum-crawler
MONGODB_TEST_URI=mongodb://mongo:27017/forum-crawler-test

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-secret-key-here
JWT_EXPIRATION=24h

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Crawler Configuration
CRAWLER_TIMEOUT=30000
CRAWLER_RETRY_ATTEMPTS=3
MAX_CONCURRENT_TASKS=5

# Logging
LOG_LEVEL=info
